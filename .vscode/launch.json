    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "pwsh",
            "args": [
                "-NoExit",
                "-Command",
                "& { Import-Module .\\TerminalGuiDesigner.psd1; Show-TUIDesigner}"
            ],
            "cwd": "${workspaceFolder}\\bin\\Debug\\netstandard2.0",
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}